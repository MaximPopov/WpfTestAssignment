<UserControl x:Class="WpfTestAssignment.FileInputReader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBox Height="Auto" HorizontalAlignment="Stretch" Margin="4" Name="TextInput" VerticalAlignment="Stretch" Width="Auto" Padding="6" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Grid.Row="1" TextChanged="TextInput_TextChanged" />
    </Grid>
</UserControl>
